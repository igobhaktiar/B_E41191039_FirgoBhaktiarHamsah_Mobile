<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    tools:context=".fragments.Keranjang">

    <TextView
        android:id="@+id/TextKeranjang"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/green"
        android:text="@string/keranjang"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_alignParentTop="true"
       />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_keranjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextKeranjang"
        android:layout_above="@id/checkArea"/>


    <RelativeLayout
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:id="@+id/checkArea"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/checkAll"
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="@string/check_all"
            android:textStyle="bold"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/total"
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:text="@string/total"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginRight="6dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/checkout"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@id/checkout" />
        <TextView
            android:id="@+id/hargaTotal"
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:text="@string/rp_20_000"
            android:layout_below="@id/total"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/checkout"
            android:gravity="end"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@id/checkout" />
        <Button
            android:id="@+id/checkout"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:text="@string/checkout"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="12dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>